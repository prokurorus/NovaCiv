// src/utils/postToTelegram.ts

export async function postToTelegram(text: string) {
  try {
    const response = await fetch("/.netlify/functions/post-to-telegram", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ text }),
    });

    if (!response.ok) {
      console.error("Failed to send to Telegram:", await response.text());
      return false;
    }

    const data = await response.json();
    if (!data.ok) {
      console.error("Telegram responded with error:", data);
      return false;
    }

    return true;
  } catch (e) {
    console.error("postToTelegram error:", e);
    return false;
  }
}
